    ALTER TABLE bdbookmark ROW_FORMAT=DYNAMIC;
    ALTER TABLE callsignnetworkmap ROW_FORMAT=DYNAMIC;
    ALTER TABLE capturecard ROW_FORMAT=DYNAMIC;
    ALTER TABLE cardinput ROW_FORMAT=DYNAMIC;
